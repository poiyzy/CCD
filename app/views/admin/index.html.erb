<td width="auto" class="dual_left" valign="top">
  <div class="inner">
    <h1>文章列表</h1>
    <div class="sep20"></div>

    <div id="projects">

      <% @posts.each do |p| %>
        <div class="project_box" id="p_231">
          <table cellpadding="0" cellspacing="0" border="0" width="100%">
            <tr>
              <td width="32" valign="top" align="center"></td>
              <td valign="top" align="left">
                <h2><a href="/admin/<%= p.id %>/edit"><%= p.title %></a></h2>
                <div class="sep10"></div>
                <small class="gray"><%= l(p.created_at, :format => :short) %></small>
              </td>
              <td valign="top" width="60" align="right">
                <input type="button" class="super normal button" value="修改" onclick="location.href='/admin/<%= p.id %>/edit'" />
              </td>
              <td valign="top" align="right" width="60">
                <input type="button" class="super normal button" value="删除" onclick="location.href='/admin/del/<%= p.id %>'" />
              </td>
            </tr>
          </table>
        </div>
      <% end %>

    </div>

  <%= button_to_function "新建", "location.href='/admin/new'", :class => "super normal button" %>
    <div class="sep5"></div>
    <div class="sep10"></div>
    <%= will_paginate(@posts)%>
  </div>
</td>
